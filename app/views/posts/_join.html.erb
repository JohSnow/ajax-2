<% if current_user && current_user.is_member_of?(post)  %>
  <%= link_to quit_post_path(post), :method => :post, :remote => true, :class => "btn btn-success" do %>
   <i class="fa fa-heart" aria-hidden="true">取消收藏</i>
   <% end %>
<% else %>
  <%= link_to join_post_path(post), :method => :post, :remote => true, :class => "btn btn-primary" do%>
    <i class="fa fa-heart-o" aria-hidden="true">收藏</i>
  <% end %>
<% end %>
