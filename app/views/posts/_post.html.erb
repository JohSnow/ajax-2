<div id="post-<%= post.id %>" class="panel panel-default">
  <div class="panel panel-heading"><%= post.user.display_name %></div>
  <div class="panel-body">
    <span id="post-thumbsup-<%= post.id %>" class="label label-success"><%= post.likes.count %> 👍</span>
    <%= post.content %>

    <div class="text-right">

      <span id="post-like-<%= post.id %>">
        <%= render :partial => "like", :locals => { :post => post } %>
      </span>

      <% if current_user && current_user.is_member_of?(post)  %>
        <%= link_to quit_post_path(post), :method => :post, :class => "btn btn-success" do %>
         <i class="fa fa-heart" aria-hidden="true">取消收藏</i>
         <% end %>
      <% else %>
        <%= link_to join_post_path(post), :method => :post, :class => "btn btn-primary" do%>
          <i class="fa fa-heart-o" aria-hidden="true">收藏</i>
        <% end %>
      <% end %>

      <% if current_user && post.user == current_user %>
        <p class="text-right">
          <%= link_to "Delete", post_path(post), :method => :delete, :remote => true, :class => "btn btn-danger" %>
        </p>
        <% end %>
    </div>
  </div>
</div>
